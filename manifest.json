{
    "name": "Zero width char detection",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Remove/Detect zero with chars in the webpages",
    "permissions": ["nativeMessaging"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
      ],
      "browser_action": {
        "default_title": "ZWC",
        "default_popup": "popup.html"
      }
}